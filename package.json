{
  "name": "map-my-shifter",
  "version": "0.1.0",
  "homepage": "./",
  "private": true,
  "author": "Bar Haim, Noaa Kless, Ido Hersko",
  "description": "STIX-Shifter Connector's Mapping Builder",
  "main": "./public/electron.js",
  "dependencies": {
    "@carbon/colors": "^10.14.0",
    "@carbon/ibm-security": "^1.45.0",
    "@carbon/icons-react": "^10.19.0",
    "@carbon/layout": "^10.13.0",
    "@carbon/type": "^10.16.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^7.1.2",
    "carbon-components": "10.41.0",
    "carbon-components-react": "7.41.0",
    "carbon-icons": "7.0.7",
    "file-saver": "^2.0.2",
    "node-sass": "4.12.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.3",
    "react-scroll": "^1.8.4",
    "react-sticky-box": "^0.9.3",
    "redux": "^4.0.5",
    "uuid": "^8.3.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:start": "concurrently -k \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electronmon .\"",
    "electron:package:mac": "yarn build && electron-builder -m -c.extraMetadata.main=build/electron.js",
    "electron:package:win": "yarn build && electron-builder -w -c.extraMetadata.main=build/electron.js",
    "electron:package:linux": "yarn build && electron-builder -l -c.extraMetadata.main=build/electron.js",
    "predeploy": "yarn run build",
    "deploy": "gh-pages -d build",
    "prettier": "npx prettier --write --ignore-path .gitignore '**/*.{js,jsx,md,scss}'",
    "eslint": "npx eslint --ignore-path .gitignore --ext js,jsx .",
    "add": "git add ."
  },
  "pre-commit": [
    "prettier",
    "eslint",
    "add"
  ],
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      "last 1 electron version"
    ],
    "development": [
      "last 1 electron version"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "electron": "^14.0.1",
    "electron-builder": "^22.11.7",
    "electronmon": "^2.0.2",
    "gh-pages": "^3.1.0",
    "pre-commit": "^1.2.2",
    "prop-types": "^15.7.2",
    "wait-on": "^6.0.0"
  },
  "build": {
    "appId": "IBM.MapMyShifter.App",
    "productName": "map-my-shifter",
    "files": ["build/**/*", "node_modules/**/*"],
    "directories": {
      "buildResources": "public"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icons/map_logo.png"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "deb"
    }
  }
}
